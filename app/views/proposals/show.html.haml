- model_class = Proposal
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:list_id) + ':'
  %br
  = @proposal.list_id
%p
  %strong= model_class.human_attribute_name(:consultant_id) + ':'
  %br
  = @proposal.consultant_id
%p
  %strong= model_class.human_attribute_name(:date_arrivee) + ':'
  %br
  = @proposal.date_arrivee
%p
  %strong= model_class.human_attribute_name(:nombre_jours) + ':'
  %br
  = @proposal.nombre_jours

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), proposals_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_proposal_path(@proposal), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), proposal_path(@proposal), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
