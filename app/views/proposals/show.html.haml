- model_class = Proposal
.page-header
  %h1 Proposition

%p
  %strong Liste:
  %br
  = @proposal.list.name
%p
  %strong Consultant proposé(e):
  %br
  = @proposal.consultant.name
%p
  %strong Date Arrivée:
  %br
  = @proposal.date_arrivee
%p
  %strong Jours de présence:
  %br
  = @proposal.nombre_jours

.form-actions
  = link_to "Retour aux propositions", proposals_path, :class => 'btn'
  = link_to "Modifier", edit_proposal_path(@proposal), :class => 'btn'
  = link_to "Supprimer", proposal_path(@proposal), :method => "delete", :data => { :confirm => "Êtes-vous sûr ?" }, :class => 'btn btn-danger'
