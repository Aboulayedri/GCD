= simple_form_for @proposal, :html => { :class => 'form-horizontal' } do |f|
  = f.association :list
  = f.association :consultant
  = f.input :date_arrivee, as: :string, :input_html => {:class => 'datepicker'}
  = f.input :nombre_jours
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), proposals_path, :class => 'btn'
:javascript
  $(".datepicker").datepicker({
    dateFormat: "dd-mm-yy",
    showWeek: true,
    firstDay: 1,
    showAnim: "slideDown"
  }); ;
