= simple_form_for @proposal, :html => { :class => 'form-horizontal' } do |f|
  = f.association :list
  = f.association :consultant
  = f.input :date_arrivee
  = f.input :nombre_jours
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), proposals_path, :class => 'btn'
