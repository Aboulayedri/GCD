- model_class = Proposal
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:list_id)
      %th= model_class.human_attribute_name(:consultant_id)
      %th= model_class.human_attribute_name(:date_arrivee)
      %th= model_class.human_attribute_name(:nombre_jours)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @proposals.each do |proposal|
      %tr
        %td= link_to proposal.id, proposal_path(proposal)
        %td= proposal.list_id
        %td= proposal.consultant_id
        %td= proposal.date_arrivee
        %td= proposal.nombre_jours
        %td=l proposal.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_proposal_path(proposal), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), proposal_path(proposal), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_proposal_path, :class => 'btn btn-primary'
