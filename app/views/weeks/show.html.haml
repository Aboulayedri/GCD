- model_class = Week
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @week.name
%p
  %strong= model_class.human_attribute_name(:debut) + ':'
  %br
  = @week.debut
%p
  %strong= model_class.human_attribute_name(:fin) + ':'
  %br
  = @week.fin

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), weeks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_week_path(@week), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), week_path(@week), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
