- model_class = Consultant
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @consultant.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @consultant.last_name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @consultant.email
%p
  %strong= model_class.human_attribute_name(:entity_id) + ':'
  %br
  = @consultant.entity_id
%p
  %strong= model_class.human_attribute_name(:id_karma) + ':'
  %br
  = @consultant.id_karma

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), consultants_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_consultant_path(@consultant), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), consultant_path(@consultant), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
