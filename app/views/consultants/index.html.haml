- model_class = Consultant
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:entity_id)
      %th= model_class.human_attribute_name(:id_karma)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @consultants.each do |consultant|
      %tr
        %td= link_to consultant.id, consultant_path(consultant)
        %td= consultant.first_name
        %td= consultant.last_name
        %td= consultant.email
        %td= consultant.entity_id
        %td= consultant.id_karma
        %td=l consultant.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_consultant_path(consultant), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), consultant_path(consultant), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_consultant_path, :class => 'btn btn-primary'
